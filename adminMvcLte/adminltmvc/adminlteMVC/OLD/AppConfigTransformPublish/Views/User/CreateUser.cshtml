
@{
    ViewBag.Title = "CreateUser";
    Layout = "~/Views/Shared/_HomePageLayout.cshtml";
}
@model AdminltMVC.Models.DropDown

<section class="content">
    <!-- Main row -->
    <div class="row">
        <!-- Left col -->
        <section class="col-lg-12 connectedSortable">
            <div class="register-box">
                <div class="register-box-body">
                    <p class="login-box-msg"><b><Label ID="lbltxt" Text="Create New User"></Label></b></p>
                    <label class="login-box-msg" style="color:red">@ViewBag.result</label>
                    <form action="CreateUser" method="post">
                        <!-- jQuery 2.2.0 -->
                        <script type="text/javascript" src="@Url.Content("~/Content/AdminLTE/js/plugins/jQuery/jQuery-2.1.4.min.js")"></script>
                        <!-- Bootstrap 3.3.6 -->
                        <script type="text/javascript" src="@Url.Content("~/Content/bootstrap/js/bootstrap.min.js")"></script>
                        <!-- FastClick -->
                        <script type="text/javascript" src="@Url.Content("~/Content/AdminLTE/js/plugins/fastclick/fastclick.js")"></script>
                        <!-- AdminLTE App -->
                        <script type="text/javascript" src="@Url.Content("~/Content/AdminLTE/js/AdminLTE/app.min.js")"></script>
                        <!-- AdminLTE for demo purposes -->
                        <script type="text/javascript" src="@Url.Content("~/Content/AdminLTE/js/AdminLTE/demo.js")"></script>
                                <div class="form-group has-feedback">
                                    <input id="txtfirstname" name="txtfirstname" type="text" class="form-control" required placeholder="First Name"/>
                                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                                </div>

                                <div class="form-group has-feedback">
                                    <input id="txtlastname" name="txtlastname" type="text" class="form-control" placeholder="Last Name" />
                                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                                </div>
                                <div class="form-group has-feedback">
                                    <input ID="txtemail" name="txtemail" type="email" required class="form-control" placeholder="Email" />
                                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                                </div>
                                <div class="form-group has-feedback">
                                    <input ID="txtpassword" name="txtpassword" type="password" required class="form-control" placeholder="Password" />
                                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                                </div>
                                <div class="form-group has-feedback">
                                    <input ID="txtconpassword" name="txtconpassword" type="password" class="form-control" placeholder="Retype password" />
                                    <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                                </div>

                                <div class="form-group has-feedback">
                                    <select name="lstrole[]" multiple class="form-control">
                                        @foreach (AdminltMVC.Models.DropDown dropdown in Model.listObj)
                                        {
                                            <option value="@dropdown.key">@dropdown.value</option>
                                        }
                                    </select>
                                </div>
                                <div class="row">
                                    <div class="col-xs-4">
                                        <button id="butRegister" type="submit" class="btn btn-primary btn-block btn-flat" >Create</button>

                                    </div>
                                    <div class="col-xs-4">
                                    </div>
                                    <div class="col-xs-4">
                                        <button id="Button2" type="reset"  class="btn btn-primary btn-block btn-flat" >Reset</button>

                                    </div>
                                    <!-- /.col -->
                                </div>
                    </form>
                </div>
            </div>
        </section>
        <!-- /.Left col -->
    </div>
    <!-- /.row (main row) -->

</section>
