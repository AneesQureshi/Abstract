
@model List<AdminltMVC.Models.Role>
@{
    Layout = null;
    var grid = new WebGrid(source: Model, defaultSort: "roleName", rowsPerPage: 3, selectionFieldName: "selectedRow",
        ajaxUpdateContainerId: "grid");
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")" type="text/javascript"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link rel="stylesheet" href="../../plugins/datatables/dataTables.bootstrap.css">
   
    
   
</head>
<body>
    @* Grid *@
    <div class="box box-danger">
        <div class="box-header with-border">
            <h3 class="box-title">Role List</h3>
        </div>
        <div class="box-body">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2 table table-bordered table-hover" style="margin-top:5px;width:50%;">
                        @{
                            ViewBag.Title = "WebGrid";
                            //var grid = new WebGrid(source: Model);
                        }
                        @grid.GetHtml(htmlAttributes: new { id = "grid" }, tableStyle:
                          "table table-bordered table-hover",  mode: WebGridPagerModes.All,
                         firstText: "<< First",
                         previousText: "< Prev",
                         nextText: "Next >",
                         lastText: "Last >>", columns: grid.Columns(
                         grid.Column("roleName", "Role", canSort: false),
                         grid.Column("description", "Description", canSort: false),
                         grid.Column(header: "Action", format:@<text>
                        <a href="#" onclick="location.href='@Url.Action("deleteRole","Role",new { id = item.roleId})'"><span data-toggle="tooltip" title="Delete"><i class="fa fa-trash "></i></span> </a>
                                                        </text>)), selectedRowStyle: "selectedRow") 
                      
                       @* Html.ActionLink("  ", "Delete", "Product", new {}, new { @class = "btn btn-default glyphicon glyphicon-remove delete-product", @data_id= item.Id }).ToHtmlString();*@
                      
                    </div>
                   
                </div>
            </div>
        </div>
    </div>

</body>
</html>
